<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/materia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicaciones de IoT"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="194dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagen"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karolina"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/materia"
        app:layout_constraintStart_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/practica"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="258dp"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/apellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arvizu Sandoval"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/materia"
        app:layout_constraintStart_toStartOf="@id/nombre"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="258dp"
        android:textColor="@color/green"/>

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="168dp"
        android:layout_height="157dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mariokart" />

    <TextView
        android:id="@+id/practica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practica"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="348dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/apellidos"
        android:textColor="@color/gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>